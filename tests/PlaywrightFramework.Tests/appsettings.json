{
  "TestConfiguration": {
    "Browser": {
      "DefaultBrowser": "Chrome",
      "Headless": false,
      "ViewportWidth": 1920,
      "ViewportHeight": 1080,
      "StartMaximized": true,
      "AcceptDownloads": true,
      "TimeoutMs": 30000,
      "NavigationTimeoutMs": 1200000,
      "LaunchArgs": [
        "--disable-web-security",
        "--disable-features=VizDisplayCompositor"
      ]
    },
    "Execution": {
      "MaxRetryAttempts": 1,
      "RetryDelayMs": 1000,
      "CaptureScreenshotOnFailure": true,
      "FullPageScreenshots": true,
      "RecordVideo": false,
      "RecordTrace": false,
      "MaxWorkers": 1,
      "TestDataDirectory": "TestData",
      "OutputDirectory": "TestResults"
    },
    "Reporting": {
      "AllureEnabled": true,
      "AllureResultsDirectory": "allure-results",
      "GenerateHtmlReport": true,
      "ReportTitle": "Playwright Automation Test Report",
      "IncludeEnvironmentInfo": true
    },
    "Logging": {
      "MinimumLevel": "Information",
      "WriteToConsole": true,
      "WriteToFile": true,
      "LogFilePathTemplate": "Logs/test-log-{Date}.txt",
      "StructuredLogging": true
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Playwright": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/test-log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  }
} 